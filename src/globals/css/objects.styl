@require 'jeet';
@require '_variables';
@require '_mixins';

// Title formatting
.o-title {
  font-weight: bold;
  margin-bottom: $spacing*2;
  // Main page title
  &--page {
  	font-size: $crust;
  	margin-top: $spacing*2.5;
  }
  // Section title
  &--section {
  	font-size: $outerCore;
    margin-bottom $spacing
	}
  // Subtitle. Same as section title but without border
  &--subtitle {
    font-size: $mantle;
  }

  &--headline {
    font-size: $crust
  }
}

// See all/Read more links
.o-see-all-link,
.o-read-more-link {
  clear:both;
  display: block;
  margin-bottom $spacing*3
  font-weight bold
  &:after {
    padding-left: $spacing;
    vertical-align: middle;
    use-icon("\f054")
  }
}

.o-button {
  button($primary)
  .agency-hmcts & {
    button($hmcts_primary)
  }
  .agency-opg & {
    button($opg_primary)
  }
  .agency-laa & {
    button($laa_primary)
  }
  .agency-pb & {
    button($pb_primary)
  }
  
}

// A box which clears anything before or after it and has some padding and margin applied
// Useful as a container
.o-clear-space {
  clear:both;
  padding: $spacing 0;
  margin-bottom: $spacing;
}

// A button that is disguised as a regular text link
.o-text-button {
  border: 0;
  background-color: transparent;
  text-decoration: underline;
  color: $links;
  cursor: pointer;
  &:hover {
    text-decoration: none;
  }
}

// Don't use this in code, it's only to extend .o-arrow-toggle-link
.extend-arrow {
  use-icon('\f078')
  vertical-align: top;
  margin-right: $spacing;
}

.o-arrow-toggle-link {
  position: relative;
  display: block;
  text-align: center;
  margin-bottom: $spacing;

  +above(m) {
    text-align: left;
    margin-bottom: 0;
  }

  &:before {
    @extend .extend-arrow;
  }
}

