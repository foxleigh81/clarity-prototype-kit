// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-search-bar {
  clearfix();
  span(1/3)
  float:right;
  padding: 0 0 $spacing*2 0;
  
  &__container {
    
  }

  input {
    position: relative;
    span(1);
    height: $spacing*3.6;
    padding: $spacing*2
    padding-right: $spacing*5;
    background: lighten($boxBg, 50%)
    &:focus {
      outline: 0;
      background: lighten($boxBg, 30%)
    }
  }

  button {
    position: absolute;
    right:0;
    font-size $mantle
    padding: $spacing*.8
    background-color: $primary;
    color: $light;
    span {
      display: none;
    }
    &:hover {
      cursor: pointer;
      color: $linkFocus;
    }
  }

  // PARENT OVERRIDES
  .c-header-container & {
    //background-color: $primary;
    padding: 0
    margin-bottom $spacing*3
    button {
      background-color: darken($boxBg, 30%);
    }
    .agency-opg & {
     //background-color: $opg_primary;
    }
  }

}
