// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-article-byline {

  &__photo { 
    width $spacing*5
    border-radius: 100%;
    vertical-align middle
    margin-right $spacing
    margin-bottom $spacing
  }

  // Parent overrides

  .c-article-item--news & {
    display none
  }

  .c-article-item--blogs & {
    display block
    margin: 0;
    a {
      color: $primary;
    }
    &__photo {
      float:left;
      height: auto;
    }
  }

  .c-news-article & {
    &__photo {
      display:none;
    }
    &__intro,
    &__date {
      display: block;
    }
  }
  .c-news-article &
  .c-blog-article & {
    font-size: $outerCore;
    margin-bottom: $spacing*3;
  }

  .c-blog-article & {
    &__photo {
      float:left;
      display:block;
      border-radius: 100%;
      width: 80px; //fixed width
      height: auto;
      margin-right: $spacing*2;
    }

    &__intro {
      padding-top: $spacing*1.5;
    }

    &__intro,
    &__date {
      color: $border;
      display: block;
    }
  }

  // PARENT OVERRIDES

  .t-author-page & {
    margin-bottom: $spacing*3;
  }
}

