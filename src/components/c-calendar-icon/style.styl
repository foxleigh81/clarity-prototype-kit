// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-calendar-icon {
  border: 1px solid $dark;
  text-decoration: none;
  a {
    text-decoration: none;
  }
  span {
    display: block;
    text-align: center;
  }
  &--dow {
    background-color: #db0813;
    color: $light;
    font-weight bold
    font-size: $smallCopy;
    padding-top: $spacing*.2;
  }
  &--dom {
    font-size: $mantle*.8;
    font-weight: bold;
    padding-top: $spacing*.5;
  }
  &--my {
    font-size: $smallCopy;
    padding-bottom: $spacing*.2;
  }

  /* PARENT OVERRIDES */
  .c-events & {
    float: left;
    width: 100px; // fixed width
    &--dow {
      padding: $spacing*.5;
    }
    &--dom {
      font-size: $crust
      padding: $spacing 0 0;
    }
  }

  .c-events-item & {
    float:left;
    width: 25%;
  }
}
