// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit";

.c-article-item {
    clearfix();
    position: relative;
    overflow hidden
    border-bottom: 0;
    background: $boxBg;
    margin-bottom: $spacing*2;
    display: table;

    h1 {
      font-size $outerCore
      a {
        color $primary;
      }
    }
    &__meta {
      position absolute;
      bottom: $spacing
      a:hover { 
        text-decoration underline
       }
    }
    &__dateline {
      color: $dark;
    }
    .c-article-byline {
      display none
      margin-left: $spacing;
      a {
        color: $dark;
       
      }
      img {
        width $spacing*5
        height: $spacing*5
        border-radius: 100%;
        vertical-align middle
        margin-right $spacing
      }
    }

    .c-categories {
      margin-top $spacing*1
      li {
        display inline
        text-transform: capitalize;
        &:after {
          content: " | "
        }
        &:last-child {
          &:after {
            display none
          }
        }
      }
    }

  img {
    display: table-cell
    height: 100%;
    width: 100%;
  }

  &__content {
    position relative
    vertical-align: top
    width: 50%;
    padding: $spacing $spacing*1.5 $spacing*7;
    display: table-cell;
    
  }

  h1 {
    ff-title();
  }


/*
  PARENT OVERRIDES
*/

  // Featured news
  .c-featured-news-list & {
    +above('s') {
      &:first-child {
        column(1); 
        
        h1 {
          font-size: $mantle;
        }  
      }
      &:nth-child(2),
      &:nth-child(3) {
        column(1/2)
        > img, 
        .c-article-item__content {
          stack();
          min-height: $spacing*15
        }
      }
    }
  }

  // Regular news
  .c-news-list & {
    clearfix();
    h1 {
      font-size: $innerCore;
      line-height 1.2
      margin-bottom $spacing*1.3
    }

    
    +above('s') {
      column(1/2, $cycle: 2);
    }

    &__content {
      padding-bottom: $spacing*.5
    }
    &__meta {
      position relative
      font-size: $bodyCopy;
    }

    .c-categories {
      display none
    }
  }

  .c-blog-feed & {
    +above('s') {
      column(1/2, $cycle: 2)
    }
    +above(m) {
      column(1, $cycle: 1)
    }
  }

  // If the excerpt has been output, hide it on the blog summary component
  .c-blog-feed & {
    &__excerpt {
      display: none;
    }
    > img {
      opacity .3
    }
  }

}
