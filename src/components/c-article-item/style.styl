// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit";

//FIXME: There are multiple components being styled here and not all are parent overrides, this should be fixed before porting to clarity.

.c-article-item {
    clearfix();
    position: relative;
    overflow hidden
    border-bottom: 0;
    background: $light;
    margin-bottom: $spacing*2;
    display: table;

    h1 {
      font-size $outerCore
      a {
        color $primary;
      }
    }
    &__meta {
      position absolute;
      bottom: $spacing
      width: 100%;
      a:hover { 
        text-decoration underline
       }
    }
    &__dateline {
      font-size: $smallCopy;
      color: $dark;
    }

    .c-article-byline {
      display none
      margin-left: $spacing;
      margin-bottom: $spacing*.5
      a {
        color: $dark;
       
      }
      img {
        width $spacing*5
        border-radius: 100%;
        vertical-align middle
        margin-right $spacing
        margin-bottom $spacing
      }
    }

    .c-categories {
      margin-top $spacing*1
      li {
        display inline
        text-transform: capitalize;
        &:after {
          content: " | "
        }
        &:last-child {
          &:after {
            display none
          }
        }
      }
    }

  > img {
    display: table-cell
    height: 100%;
    width: 100%;
  }

  &__content {
    position relative
    vertical-align: top
    width: 50%;
    padding: $spacing $spacing*1.5 $spacing*7;
    display: table-cell;
    
  }

  h1 {
    ff-title();
  }

  // If it is a blog type
  &--blogs {
    h1 {
      &:before {
        use-icon("\e977")
        padding-right: $spacing;
        color: lighten($dark, 40%)
      }
    }
    &__excerpt {
      display: none;
    }
    
    .c-article-byline {
      display block
      margin: 0;
      a {
        color: $primary;
      }
      img {
        display block
        float:left;
        border-radius: 100%;
        height: auto;
      }
    }
  }


/*
  PARENT OVERRIDES
*/

  // Featured news
  .c-featured-news-list & {
    +above('s') {
      &:first-child {
        column(1); 
        
        h1 {
          font-size: $mantle;
        }  
      }
      &:nth-child(2),
      &:nth-child(3) {
        column(1/2)
        > img, 
        .c-article-item__content {
          stack();
          min-height: $spacing*15
        }
      }
    }
  }

  // Regular news
  .c-news-list & {
    clearfix();
    h1 {
      font-size: $innerCore;
      line-height 1.2
      margin-bottom $spacing*1.3
    }

    +above('s') {
      column(1/2, $cycle: 2);
    }

    &__content {
      padding-bottom: $spacing*.5
    }
    &__meta {
      position relative
    }

     
    .c-article-interactions,
    .c-article-byline,
    .c-categories {
      display none
    }
  }

  .c-blog-feed & {
    +above('s') {
      column(1/2, $cycle: 2)
    }
    +above(m) {
      h1 {
        padding-bottom $spacing
      }
      column(1, $cycle: 1)
      >img {
        display none
      }
      &__content {
        span(1)
      }
      .c-categories {
        display none
      }
    }
  }

