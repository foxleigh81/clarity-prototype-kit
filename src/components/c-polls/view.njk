<section class="c-polls js-polls">
  <h1 class="o-title o-title--section">Poll</h1>
  <header class="c-polls__top">
    <h2 class="o-title o-title--subtitle">{{ poll.questionTitle }}</h2>
    <p>{{ poll.questionDesc }}</p>
  </header>
  <form action="post" id="poll-{{poll.name}}">
    <ul>
    {% for answer in poll.answers %}  
        <li data-count="{{ answer.count }}"><label><input type="{% if poll.multiSelect == true %}checkbox{% else %}radio{% endif %}" name="answers" id="answers_{{answer.value}}" value="{{ answer.value }}" /><div class="c-polls__answer"><span class="c-polls__answer-text">{{ answer.title }}</span></div></label><span class="c-polls__answer-bar"></span></li>
    {% endfor %}
    </ul>
    <p>Poll will close in {{ poll.daysLeft }} days. <strong><span class="js-poll-count">{{ poll.voteCount }}</span> votes so far</strong></p>
    <div class="c-polls__buttons js-poll-buttons">
      <button class="o-button">Submit</button>
      <button class="o-text-button">View results</button>
    </div>
  </form>
</section>
