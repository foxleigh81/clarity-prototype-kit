// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-headed-link-list {

  +above('s') {
    column(1/2, $cycle: 2)
  }

  +above(m) {
    column(1/3, $cycle: 3)
  }

  h1 > a {
    display: block;
    font-weight: bold;
    text-decoration: underline;
    margin-bottom: $spacing;
  }
  ul {
    real-list()
  }
}
